<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:fontFamily="sans-serif-thin"
            android:gravity="left"
            android:text="@string/reglamentoTextReglamento"
            android:textColor="#000000"
            android:textSize="20dip"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <ScrollView android:id="@+id/textAreaScroller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_x="0px"
            android:layout_y="25px"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="left"
                android:text="Bienvenido a ArgEs (“Argentina Estudia”). InGenio te proporciona una manera rápida, sencilla y centralizada de conocer material digital relacionado con la emisión de becas a través de nuestra plataforma de contenido compartido. ¡Simplemente instala la aplicación, completa tus datos, y empeza conocer todas las becas disponibles según tu perfil!"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal" />

        </ScrollView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>