<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/iso" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_weight="1"
                android:text="title"
                android:textColor="#040404"
                android:textSize="20dp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/TextView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/thumbnail"
                    android:text="@string/tipoTextInfoBecas"
                    android:textColor="#a6a3a3"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txttipo"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtTexto"
                    android:layout_toEndOf="@+id/thumbnail"
                    android:layout_weight="4.97"
                    android:text="@string/tipo_becaTextInfoBecas"
                    android:textColor="#a6a3a3"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/TextView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/thumbnail"
                    android:text="@string/estudianteTextInfoBecas"
                    android:textColor="#a6a3a3"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txtEstudiante"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtTexto"
                    android:layout_toEndOf="@+id/thumbnail"
                    android:layout_weight="4.97"
                    android:text="@string/tipo_estudianteTextInfoBecas"
                    android:textColor="#a6a3a3"
                    android:typeface="sans" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@android:drawable/btn_star_big_off"
            android:elevation="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="0dp"
            android:scaleX="0.5"
            android:scaleY="0.5" />

    </LinearLayout>

</LinearLayout>